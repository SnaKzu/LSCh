{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd web-app/backend && python app_railway_web.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "PORT": "8080",
        "SECRET_KEY": "lsch-railway-web-production-secret-2024",
        "PYTHONPATH": "/app:/app/web-app/backend",
        "MAX_CONTENT_LENGTH": "16777216"
      }
    }
  }
}